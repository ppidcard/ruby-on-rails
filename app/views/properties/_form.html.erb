<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj:@property %>
      <%= form_with(model: @property, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :address, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :address, class: "form-control shadow rounded", placeholder: "Address of the property" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :photo, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :photo, rows: 10, class: "form-control shadow rounded", placeholder: "Image URL" %>
          </div>
        </div>

        <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the property" %>
        </div>
      </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to properties listing ]', properties_path, class: "text-info" %>
  </div>
</div>